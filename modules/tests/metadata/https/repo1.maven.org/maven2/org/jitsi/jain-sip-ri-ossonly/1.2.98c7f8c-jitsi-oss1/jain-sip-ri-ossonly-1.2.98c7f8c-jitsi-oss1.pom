<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.jitsi</groupId>
	<artifactId>jain-sip-ri-ossonly</artifactId>
	<!-- 1.2.X is the version of the master branch that this version is based 
		on; jitsi-oss declares this POM; N declares the this branch/fork version 
		(incremental) -->
	<version>1.2.98c7f8c-jitsi-oss1</version>
	<packaging>bundle</packaging>

	<name>jain-sip-ri-ossonly</name>
	<url>https://github.com/jitsi/jain-sip/tree/jitsi-oss-only/</url>
	<description>Package of JAIN SIP and SDP that contains only OSS code (i.e. not javax.sip/java.sdp).</description>
	<licenses>
		<license>
			<name>Public Domain</name>
			<url>http://www.gnu.org/licenses/license-list.html#PublicDomain</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<scm>
		<url>https://github.com/jitsi/jain-sip</url>
		<connection>scm:git:https://github.com/jitsi/jain-sip.git</connection>
		<developerConnection>scm:git:https://github.com/jitsi/jain-sip.git</developerConnection>
	  <tag>v1.2.98c7f8c-jitsi-oss1</tag>
  </scm>

	<developers>
		<developer>
			<id>ibauersachs</id>
			<name>Ingo Bauersachs</name>
			<email>ingo@jitsi.org</email>
		</developer>
	</developers>

	<properties>
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.17</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.opentelecoms.sip</groupId>
			<artifactId>sip-api-1.2</artifactId>
			<version>1.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.opentelecoms.sdp</groupId>
			<artifactId>sdp-api</artifactId>
			<version>1.0</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>../../</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>3.0.1</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<fork>true</fork>
					<includes>
						<include>src/gov/nist/javax/sip/**/*.java</include>
						<include>src/gov/nist/javax/sdp/**/*.java</include>
						<include>src/gov/nist/core/**/*.java</include>
					</includes>
					<excludes>
						<exclude>/</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.5.3</version>
			</plugin>
		</plugins>

		<resources>
			<resource>
				<directory>target</directory>
				<includes>
					<include>gov/nist/javax/sip/**</include>
					<include>gov/nist/javax/sdp/**</include>
					<include>gov/nist/core/**</include>
				</includes>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
	</build>

	<profiles>
		<profile>
			<id>release-prepare</id>
			<activation>
				<property>
					<name>performRelease</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
						<version>3.0.0</version>
						<configuration>
							<includes>
								<include>src/gov/nist/javax/sip/**/*.java</include>
								<include>src/gov/nist/javax/sdp/**/*.java</include>
								<include>src/gov/nist/core/**/*.java</include>
							</includes>
						</configuration>
						<executions>
							<execution>
								<id>attach-sources</id>
								<goals>
									<goal>jar-no-fork</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<version>2.10.3</version>
						<configuration>
							<sourceFileIncludes>
								<include>src/gov/nist/javax/sip/**/*.java</include>
								<include>src/gov/nist/javax/sdp/**/*.java</include>
								<include>src/gov/nist/core/**/*.java</include>
							</sourceFileIncludes>
							<failOnError>false</failOnError>
							<additionalparam>-Xdoclint:none</additionalparam>
						</configuration>
						<executions>
							<execution>
								<id>attach-javadocs</id>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>release</id>
			<activation>
				<property>
					<name>performRelease</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
						<version>1.6</version>
						<executions>
							<execution>
								<id>sign-artifacts</id>
								<phase>verify</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.sonatype.plugins</groupId>
						<artifactId>nexus-staging-maven-plugin</artifactId>
						<version>1.6.6</version>
						<extensions>true</extensions>
						<configuration>
							<serverId>ossrh</serverId>
							<nexusUrl>https://oss.sonatype.org/</nexusUrl>
							<autoReleaseAfterClose>false</autoReleaseAfterClose>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<distributionManagement>
		<snapshotRepository>
			<id>ossrh</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
		</snapshotRepository>
		<repository>
			<id>ossrh</id>
			<url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
		</repository>
	</distributionManagement>
</project>
