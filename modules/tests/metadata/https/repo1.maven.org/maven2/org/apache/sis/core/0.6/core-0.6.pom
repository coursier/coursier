  <!-- ===========================================================
           Module Description
       =========================================================== -->
  <artifactId>core</artifactId>
  <packaging>pom</packaging>
  <name>Apache SIS core modules</name>
  <description>
    Group of modules providing the core of Apache SIS services:
    metadata, referencing, geometry, feature, coverage, rendering.
  </description>


